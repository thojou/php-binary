<phpunit bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="Thojou\\Binary">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>

    <php>
        <ini name="display_errors" value="true"/>
        <ini name="memory_limit" value="-1" />
    </php>
</phpunit>
